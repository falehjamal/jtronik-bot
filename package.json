{
  "name": "bot_jtronik",
  "version": "1.0.0",
  "description": "WhatsApp Bot dengan Dashboard menggunakan Node.js, Express, Baileys, dan SQLite",
  "main": "server.js",
  "bin": {
    "bot_jtronik": "server.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg . --out-path dist",
    "build:win": "pkg . --targets node18-win-x64 --out-path dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "baileys",
    "express",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.8",
    "@xmpp/client": "^0.13.6",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "qrcode": "^1.5.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "assets": [
      "public/**/*",
      "database/**/*",
      "sessions/**/*",
      "node_modules/@whiskeysockets/baileys/**/*",
      "node_modules/sqlite3/**/*"
    ],
    "ignore": [
      "node_modules/axios/**/*"
    ],
    "outputPath": "dist"
  }
}
